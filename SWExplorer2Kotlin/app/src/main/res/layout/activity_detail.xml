<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eu.epfc.swexplorerkotlin.DetailActivity">


    <TextView
        android:id="@+id/text_planet_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="48sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Planet" />

    <ImageView
        android:id="@+id/image_planet"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_planet_value"
        app:srcCompat="@mipmap/ic_launcher" />

    //android
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_diameter_title" />

    //android
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_orbital_period_title" />

    //android
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_rotation_period_title" />

    <TextView
        android:id="@+id/text_climate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="178dp"
        android:layout_marginBottom="154dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_climate_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_diameter_title"
        tools:text="Climate" />

    <TextView
        android:id="@+id/text_diameter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/text_climate_title"
        app:layout_constraintEnd_toStartOf="@+id/text_diameter_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_orbital_period_title"
        tools:text="Diameter" />

    <TextView
        android:id="@+id/text_orbital_period_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="245dp"
        android:layout_marginBottom="293dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_orbital_period_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_rotation_period_title"
        tools:text="Orbital Period" />

    <TextView
        android:id="@+id/text_rotation_period_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="191dp"
        android:layout_marginBottom="32dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/text_orbital_period_title"
        app:layout_constraintEnd_toStartOf="@+id/text_rotation_period_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_planet"
        tools:text="Rotation Period" />

    <TextView
        android:id="@+id/text_orbital_period_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="47dp"
        app:layout_constraintBottom_toTopOf="@+id/text_diameter_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_orbital_period_title"
        app:layout_constraintTop_toBottomOf="@+id/text_rotation_period_value"
        tools:text="24" />

    <TextView
        android:id="@+id/text_rotation_period_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="191dp"
        android:layout_marginTop="355dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="121dp"
        app:layout_constraintBottom_toTopOf="@+id/text_diameter_value"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_rotation_period_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="24" />

    <TextView
        android:id="@+id/text_diameter_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="241dp"
        android:layout_marginTop="492dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="47dp"
        app:layout_constraintBottom_toTopOf="@+id/text_climate_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_diameter_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="4800" />

    <TextView
        android:id="@+id/text_climate_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_climate_title"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="temperate, tropical" />

</androidx.constraintlayout.widget.ConstraintLayout >