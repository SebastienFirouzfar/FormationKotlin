<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background= "@android:color/darker_gray" >


    <TextView
        android:id="@+id/textViewDiameter"
        android:layout_width="128dp"
        android:layout_height="19dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_planet_name"
        tools:text="Diameter : 120" />

    <TextView
        android:id="@+id/text_planet_name"
        android:layout_width="52dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/aPlanet"
        app:layout_constraintBottom_toTopOf="@+id/textViewDiameter"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewTerrain"
        android:layout_width="135dp"
        android:layout_height="19dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.297"
        app:layout_constraintStart_toEndOf="@+id/textViewDiameter"
        tools:text="Terrain :  grasslands" />

    <ImageView
        android:id="@+id/image_Population2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_Population1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/population_image" />

    <ImageView
        android:id="@+id/image_Population1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="241dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_planet_name"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/population_image" />

    <ImageView
        android:id="@+id/image_Population3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_Population2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/population_image" />

</androidx.constraintlayout.widget.ConstraintLayout>